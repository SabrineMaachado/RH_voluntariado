img.estilosimg.logo(src='assets/images/tela-3/logo3.png')
div
    img.text(src='assets/images/tela-3/page3.2.png')
    .dicas(class="add-hand add-hand-center")
        each n in [1,2,3,4]
            .relative
                img.dica(src='assets/images/tela-3/dica'+n+'.png', data-modal='page-3_2_tip_'+n)

#page-3_2_tip_1.tooltip.add-close(style="left: calc(50% - (40em / 2)); width: 40em; margin-top: 10em")
    img(src="assets/images/tela-3/page3.2-tip1-text1_ajuste.png")
    .slider
        div
            img.default.w100(src="assets/images/tela-3/page3.2-tip1-slide-1.png")
        div 
            img(src="assets/images/tela-3/page3.2-tip1-slide-2.png")
    .modal-close(data-modal-close="parent")

#page-3_2_tip_2.tooltip.add-close(style="left: calc(50% - (34em / 2)); width: 34em; margin-top: 10em")
    img(src="assets/images/tela-3/page3.2-tip2_.png")
    img.btn.animated.pulse.infinite(src="assets/images/tela-3/page3.2-tip2-click.png", style="width: 2em; float:right", data-modal="page-3_2_tip_2-tip")
    img#page-3_2_tip_2-tip(src="assets/images/tela-3/page3.2-tip2-click-tip.png",style="width: 22em; height:9em; position:absolute;bottom:2em;right:2em;", data-modal-close="self")
    .modal-close(data-modal-close="parent")
#page-3_2_tip_3.tooltip.tip-3.add-close(style="left: calc(50% - (34em / 2)); width: 34em; margin-top: 10em")
    img(src="assets/images/tela-3/page3.2-tip3-text_ajuste.png")
    .slider
        div.tamBox
            img.default(src="assets/images/tela-3/page3.2-tip3-slide-1.png")
        div 
            img.default(src="assets/images/tela-3/page3.2-tip3-slide-2.png")
    .modal-close(data-modal-close="parent")
#page-3_2_tip_4.tooltip.add-close(style="left: calc(50% - (34em / 2)); width: 34em; margin-top: 10em")
    img(src="assets/images/tela-3/page3.2-tip4.png")
    .modal-close(data-modal-close="parent")